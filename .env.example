NEXT_PUBLIC_BURN_AMOUNT="1000000000000000000"

# Rate Limiting
RATE_LIMIT_IP_REQUESTS="5"
RATE_LIMIT_WALLET_REDEMPTIONS="3"
REDEMPTION_WINDOW_HOURS="24"

# Cloudflare Turnstile
