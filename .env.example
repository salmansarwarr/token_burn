# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="your-walletconnect-project-id"

# Admin Credentials (for initial seed)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="change-this-secure-password"

# Campaign Configuration
NEXT_PUBLIC_CAMPAIGN_NAME="Token Burn Redemption Campaign"
NEXT_PUBLIC_CAMPAIGN_DESCRIPTION="Burn tokens to receive exclusive promo codes"
CAMPAIGN_START_DATE="2026-01-25T00:00:00Z"
CAMPAIGN_END_DATE="2026-03-25T23:59:59Z"
